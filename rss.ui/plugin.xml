<?xml version="1.0" encoding="UTF-8"?>
<plugin
   id="com.pnehrer.rss.ui"
   name="%pluginName"
   version="1.0.0"
   provider-name="%providerName"
   class="com.pnehrer.rss.ui.RSSUI">

   <runtime>
      <library name="ui.jar"/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="com.pnehrer.rss.core"/>
   </requires>


   <extension
         point="org.eclipse.ui.views">
      <category
            name="RSS"
            id="rss.ui.category1">
      </category>
      <view
            name="Simple"
            category="rss.ui.category1"
            class="com.pnehrer.rss.ui.views.SimpleViewPart"
            id="com.pnehrer.rss.ui.simple">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="RSS"
            id="rss.ui.category1">
      </category>
      <wizard
            name="New RSS Feed"
            category="rss.ui.category1"
            class="com.pnehrer.rss.ui.wizards.NewChannelWizard"
            id="rss.ui.wizard1">
      </wizard>
   </extension>

</plugin>
