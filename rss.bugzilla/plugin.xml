<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="com.pnehrer.rss.bugzilla"
   name="Bugzilla RSS Plug-in"
   version="1.0.0"
   provider-name="Peter Nehrer"
   class="com.pnehrer.rss.bugzilla.BugzillaRSSPlugin">

   <runtime>
      <library name="bugzilla.jar">
         <export name="*"/>
      </library>
   </runtime>
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="com.pnehrer.rss.core"/>
   </requires>
   <extension
         point="com.pnehrer.rss.core.translator">
      <translator
            class="com.pnehrer.rss.bugzilla.BugDetailTranslator"
            description="Bugzilla XML bug detail translator."
            id="bugdetail"/>
      <translator
            class="com.pnehrer.rss.bugzilla.BugListTranslator"
            description="Bugzilla XML bug list translator."
            id="buglist"/>
   </extension>

</plugin>
